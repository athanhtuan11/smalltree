# Production Configuration Template
# Copy this to .env.production on your server and modify as needed

# Database
DATABASE_URL=sqlite:///app/site.db

# Security
SECRET_KEY=your-production-secret-key-here-make-it-long-and-random

# AI Services (optional - comment out if not using)
COHERE_API_KEY=your-cohere-api-key
GROQ_API_KEY=your-groq-api-key  
GEMINI_API_KEY=your-gemini-api-key

# Flask Settings
FLASK_ENV=production
FLASK_DEBUG=0

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=app/static/uploads

# Session Settings
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Database Backup Settings
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION=30  # days
